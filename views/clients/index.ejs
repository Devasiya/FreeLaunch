<div class="container mt-4">
    <h1 class="text-center">All Clients</h1>

    <!-- Flash Messages -->
    <% if (error) { %>
        <div class="alert alert-danger">
            <%= error %>
        </div>
        <% } %>
            <% if (success) { %>
                <div class="alert alert-success">
                    <%= success %>
                </div>
                <% } %>

                    <% if (clients.length===0) { %>
                        <p class="text-muted text-center">No clients found.</p>
                        <% } else { %>
                            <table class="table table-striped mt-3">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Profile</th>
                                        <th>Name</th>
                                        <th>Company</th>
                                        <th>Projects</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% clients.forEach(client=> { %>
                                        <tr>
                                            <!-- Profile Photo -->
                                            <td>
                                                <% if (client.profilePhoto) { %>
                                                    <img src="<%= client.profilePhoto %>" alt="Profile"
                                                        class="rounded-circle" width="50" height="50">
                                                    <% } else { %>
                                                        <span class="text-muted">N/A</span>
                                                        <% } %>
                                            </td>

                                            <!-- Name -->
                                            <td>
                                                <%= client.firstName || "" %>
                                                    <%= client.lastName || "" %>
                                            </td>

                                            <!-- Company Name -->
                                            <td>
                                                <%= client.companyName || "N/A" %>
                                            </td>

                                            <!-- Number of Projects -->
                                            <td>
                                                <%= client.projects.length %>
                                            </td>

                                            <!-- Actions -->
                                            <td>
                                                <a href="/api/clients/<%= client._id %>"
                                                    class="btn btn-info btn-sm">View</a>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                            <% } %>
</div>