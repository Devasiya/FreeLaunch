<div class="container mt-4">
    <h1 class="text-center">Projects for <%= client.firstName %>
            <%= client.lastName %>
    </h1>

    <!-- Flash Messages -->
    <% if (error) { %>
        <div class="alert alert-danger">
            <%= error %>
        </div>
        <% } %>
            <% if (success) { %>
                <div class="alert alert-success">
                    <%= success %>
                </div>
                <% } %>

                    <% if (projects.length===0) { %>
                        <p class="text-muted text-center">No projects available for this client.</p>
                        <% } else { %>
                            <ul class="list-group mt-3">
                                <% projects.forEach(project=> { %>
                                    <li class="list-group-item">
                                        <h5><strong>
                                                <%= project.title %>
                                            </strong></h5>
                                        <p><strong>Description:</strong>
                                            <%= project.description || "No description provided" %>
                                        </p>
                                        <p><strong>Budget:</strong> â‚¹<%= project.budget %>
                                        </p>
                                        <p><strong>Deadline:</strong>
                                            <%= project.deadline.toDateString() %>
                                        </p>
                                        <p><strong>Status:</strong> <span class="badge bg-info">
                                                <%= project.status %>
                                            </span></p>
                                    </li>
                                    <% }) %>
                            </ul>
                            <% } %>

                                <!-- Back Button -->
                                <a href="/api/clients/<%= client._id %>" class="btn btn-secondary mt-3">Back to Client
                                    Details</a>
</div>