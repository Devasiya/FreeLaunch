<form id="agreementForm">
    <label>Client ID:</label>
    <input type="text" id="clientId" required />

    <label>Freelancer ID:</label>
    <input type="text" id="freelancerId" required />

    <label>Freelancer Wallet Address:</label>
    <input type="text" id="freelancerAddress" required />

    <label>Agreement Terms:</label>
    <textarea id="terms" required></textarea>

    <label>Start Date:</label>
    <input type="date" id="startDate" required />

    <label>End Date:</label>
    <input type="date" id="endDate" required />

    <button type="submit">Create Agreement</button>
</form>

<script>
    document.getElementById("agreementForm").addEventListener("submit", async (event) => {
        event.preventDefault();

        const client = document.getElementById("clientId").value;
        const freelancer = document.getElementById("freelancerId").value;
        const freelancerAddress = document.getElementById("freelancerAddress").value;
        const terms = document.getElementById("terms").value;
        const startDate = document.getElementById("startDate").value;
        const endDate = document.getElementById("endDate").value;

        const response = await fetch("/agreements/create", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ client, freelancer, freelancerAddress, terms, startDate, endDate }),
        });

        const result = await response.json();
        alert(result.message);
    });
</script>