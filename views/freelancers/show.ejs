<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <div class="container mt-4">
        <h1 class="text-center">
            <%= freelancer.firstName %>
                <%= freelancer.lastName %>
        </h1>

        <div class="row">
            <div class="col-md-4">
                <!-- Profile Photo -->
                <% if (freelancer.profilePhoto) { %>
                    <img src="<%= freelancer.profilePhoto %>" alt="Profile Photo" class="img-fluid rounded-circle"
                        width="200" height="200">
                    <% } else { %>
                        <img src="/images/default-profile.png" alt="Default Profile" class="img-fluid rounded-circle"
                            width="200" height="200">
                        <% } %>
            </div>
            <div class="col-md-8">
                <h3>Contact Information</h3>
                <p><strong>Email:</strong>
                    <%= freelancer.email %>
                </p>
                <p><strong>Phone Number:</strong>
                    <%= freelancer.phoneNumber || "N/A" %>
                </p>
                <p><strong>Location:</strong>
                    <%= freelancer.location.city || "N/A" %>, <%= freelancer.location.state || "N/A" %>, <%=
                                freelancer.location.country || "N/A" %>
                </p>

                <h3>Professional Details</h3>
                <p><strong>Experience:</strong>
                    <%= freelancer.experience || "N/A" %>
                </p>
                <p><strong>Description:</strong>
                    <%= freelancer.description || "N/A" %>
                </p>
                <p><strong>Skills:</strong>
                    <%= freelancer.skills.join(', ') || "N/A" %></p>
            </div>
        </div>

        <div class="mt-4">
            <a href="/api/freelancers/<%= freelancer._id %>/edit" class="btn btn-warning">Edit</a>
            <form action="/api/freelancers/<%= freelancer._id %>?_method=DELETE" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
            <a href="/api/freelancers/<%= freelancer._id %>/projects" class="btn btn-primary mt-3">View Projects</a>
            <a href="/api/freelancers/<%= freelancer._id %>/reviews" class="btn btn-secondary btn-sm">See Reviews</a>
            <a href="/api/freelancers" class="btn btn-secondary">Back to Freelancers</a>
        </div>
    </div>

    <!-- Projects Section -->
    <div class="mt-4">
        <h3>Projects</h3>
        <% if (freelancer.projects.length===0) { %>
            <p class="text-muted">No projects available.</p>
            <% } else { %>
                <ul class="list-group">
                    <% freelancer.projects.forEach(project=> { %>
                        <li class="list-group-item">
                            <strong>
                                <%= project.title %>
                            </strong> - <%= project.description || "No description available" %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>
    </div>

    <!-- Reviews Section
    <div class="mt-4">
        <h3>Reviews</h3>
        <% if (freelancer.reviews.length===0) { %>
            <p class="text-muted">No reviews yet.</p>
            <% } else { %>
                <ul class="list-group">
                    <% freelancer.reviews.forEach(review=> { %>
                        <li class="list-group-item">
                            <strong>Rating:</strong>
                            <%= review.rating %>/5 <br>
                                <%= review.comment || "No comment provided" %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>
    </div> -->

</body>
</html>