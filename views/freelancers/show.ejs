<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= freelancer.firstName %>
            <%= freelancer.lastName %> - Profile
    </title>
    <link rel="stylesheet" href="/freelancerCss/show.css"> <!-- Update the path as necessary -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar">
        <div class="logo">SureConnect</div>
        <ul class="nav-links">
            <li><a href="/">Home</a></li>
            <li><a href="/about">About Us</a></li>
            <li><a href="/contact">Contact</a></li>
            <li><a href="/auth/login" class="btn login-btn">Login</a></li>
        </ul>
    </nav>

    <div class="container">
        <div class="profile-card">
            <!-- Left Section with Profile Photo -->
            <div class="profile-left">
                <div class="profile-box">
                    <% if (freelancer.profilePhoto) { %>
                        <img src="<%= freelancer.profilePhoto %>" alt="Profile" class="profile-img">
                        <% } else { %>
                            <p class="text-muted">No Profile Photo</p>
                            <% } %>
                </div>
            </div>

            <!-- Right Section with Freelancer Details -->
            <div class="profile-right">
                <h2>
                    <%= freelancer.firstName %>
                        <%= freelancer.lastName %>
                </h2>
                <p class="profession">
                    <%= freelancer.category || "N/A" %>
                </p>
                <p><strong>Email:</strong>
                    <%= freelancer.email %>
                </p>
                <p><strong>Phone:</strong>
                    <%= freelancer.phoneNumber || "N/A" %>
                </p>
                <p><strong>Description:</strong>
                    <%= freelancer.description || "N/A" %>
                </p>
                <p><strong>Skills:</strong>
                    <%= freelancer.skills.join(', ') || "N/A" %></p>

                <!-- Buttons -->
                <a href="/api/freelancers/<%= freelancer._id %>/edit" class="btn btn-edit">Edit</a>
                <form action="/api/freelancers/<%= freelancer._id %>?_method=DELETE" method="POST" style="display: inline;">
                    <button type="submit" class="btn btn-danger" onclick="return confirm(' Are you sure?');">
                        Delete</button>
                        </form>
                        <a href="/api/freelancers/<%= freelancer._id %>/projects" class="btn btn-view">View Projects</a>
                        <a href="/api/freelancers/<%= freelancer._id %>/reviews" class="btn btn-view">View Reviews</a>
            </div>
        </div>

        <!-- Projects Section -->
        <div class="section">
            <h3>Projects</h3>
            <% if (freelancer.projects.length===0) { %>
                <p class="text-muted">No projects available.</p>
                <% } else { %>
                    <ul class="list-group">
                        <% freelancer.projects.forEach(project=> { %>
                            <li class="list-group-item">
                                <strong>
                                    <%= project.title %>
                                </strong> - <%= project.description || "No description available" %>
                            </li>
                            <% }) %>
                    </ul>
                    <% } %>
        </div>

        <!-- Reviews Section -->
        <div class="section">
            <h3>Reviews</h3>
            <% if (freelancer.reviews.length===0) { %>
                <p class="text-muted">No reviews yet.</p>
                <% } else { %>
                    <ul class="list-group">
                        <% freelancer.reviews.forEach(review=> { %>
                            <li class="list-group-item">
                                <strong>Rating:</strong>
                                <%= review.rating %>/5 <br>
                                    <%= review.comment || "No comment provided" %>
                            </li>
                            <% }) %>
                    </ul>
                    <% } %>
        </div>
    </div>

    <!-- Footer -->
    <div class="footer">
        <div class="footer-container">
