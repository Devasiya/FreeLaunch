    <!-- Main Container -->
    <div class="container mt-4">
        <h1 class="text-center text-info">All Freelancers</h1>

        <!-- Flash Messages -->
        <% if (error && typeof error==="string" && error.trim() !=="" ) { %>
            <div class="alert alert-danger">
                <%= error %>
            </div>
            <% } %>

                <% if (success && typeof success==="string" && success.trim() !=="" ) { %>
                    <div class="alert alert-success">
                        <%= success %>
                    </div>
                    <% } %>

                        <% if (freelancers.length===0) { %>
                            <p class="text-muted text-center mt-4">No freelancers found.</p>
                            <% } else { %>

                                <!-- Freelancer Cards Container -->
                                <div class="freelancer-container mt-4">
                                    <% freelancers.forEach(freelancer=> { %>
                                        <div class="freelancer-card">
                                            <!-- Profile Photo -->
                                            <% if (freelancer.profilePhoto) { %>
                                                <img src="<%= freelancer.profilePhoto %>" alt="Profile"
                                                    class="freelancer-img">
                                                <% } else { %>
                                                    <img src="/images/image1.png" alt="Profile" class="freelancer-img">
                                                    <% } %>

                                                        <h5 class="freelancer-title">
                                                            <%= freelancer.firstName %>
                                                                <%= freelancer.lastName %>
                                                        </h5>

                                                        <p class="freelancer-text">
                                                            <i
                                                                class="fas fa-building me-2"></i><strong>Company:</strong>
                                                            <%= freelancer.company || "N/A" %>
                                                        </p>

                                                        <p class="freelancer-text">
                                                            <i
                                                                class="fas fa-project-diagram me-2"></i><strong>Projects:</strong>
                                                            <%= freelancer.projects.length || 0 %>
                                                        </p>

                                                        <!-- View Profile Button -->
                                                        <a href="/api/freelancers/<%= freelancer._id %>"
                                                            class="btn-view">
                                                            <i class="fas fa-eye me-2"></i>View Profile
                                                        </a>
                                        </div>
                                        <% }) %>
                                </div>
                                <% } %>
