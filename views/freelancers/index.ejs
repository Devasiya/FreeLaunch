<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <div class="container mt-4">
        <h1 class="text-center">All Freelancers</h1>

        <!-- Flash Messages -->
        <% if (error) { %>
            <div class="alert alert-danger">
                <%= error %>
            </div>
            <% } %>
                <% if (success) { %>
                    <div class="alert alert-success">
                        <%= success %>
                    </div>
                    <% } %>

                        <% if (freelancers.length===0) { %>
                            <p class="text-muted text-center">No freelancers found.</p>
                            <% } else { %>
                                <table class="table table-striped mt-3">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Profile</th>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Phone Number</th>
                                            <th>Skills</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% freelancers.forEach(freelancer=> { %>
                                            <tr>
                                                <!-- Profile Photo -->
                                                <td>
                                                    <% if (freelancer.profilePhoto) { %>
                                                        <img src="<%= freelancer.profilePhoto %>" alt="Profile"
                                                            class="rounded-circle" width="50" height="50">
                                                        <% } else { %>
                                                            <span class="text-muted">N/A</span>
                                                            <% } %>
                                                </td>

                                                <!-- Name -->
                                                <td>
                                                    <%= freelancer.firstName %>
                                                        <%= freelancer.lastName %>
                                                </td>

                                                <!-- Email -->
                                                <td>
                                                    <%= freelancer.email %>
                                                </td>

                                                <!-- Phone Number -->
                                                <td>
                                                    <%= freelancer.phoneNumber || "N/A" %>
                                                </td>

                                                <!-- Skills -->
                                                <td>
                                                    <%= freelancer.skills.join(', ') || "N/A" %>
                            </td>

                            <!-- Actions -->
                            <td>
                                <a href="/api/freelancers/<%= freelancer._id %>" class="btn btn-info btn-sm">View</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } %>
    </div>
</body>
</html>